 <div >
    <div class="flex flex-col  w-full text-sm text-left text-gray-500 ">
            <div class="flex flex-row grid grid-cols-6 mx-2 text-xs text-gray-700 uppercase bg-gray-100  ">
                <div  class=" py-3">
                    name
                </div>
                <div  class="py-3">
                    surname
                </div>
                <div  class="py-3">
                    phone_number
                </div>
                <div  class="py-3">
                    email
                </div>  
                <div  class="py-3">
                    comments
                </div>   

           
                 <div  class=" py-3">
                    actions
                </div>
            </div>
    <%= turbo_frame_tag "clients"  do %>          

 <% @clients.each do |client| %>

        <div >
            <div class="flex flex-row  grid grid-cols-6 mx-2 bg-white border-b font-medium text-gray-900 hover:bg-gray-100  ">
                 <div  class="py-4  ">
                    <%= client.name %>
                </div>
                <div  class=" py-4  ">
                    <%= client.surname %>
                </div>
                <div class=" py-4">
                    <%= client.phone_number %>
                </div>
                <div  class=" py-4 overflow-hidden w-32">
                    <%= client.email %>
                </div>
                <div  class=" py-4  ">
                    <%= client.comments %>
                </div>


                <div class="py-4">

                    <div class="inline-flex rounded-md shadow-sm">

                    <a href="<%=edit_client_path(client.id) %>" class = "px-4 " data-turbo-frame ="edit">  
                        <svg class="w-[16px] h-[16px] text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 8 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2.9" d="m1 13 5.7-5.326a.909.909 0 0 0 0-1.348L1 1"/>
                        </svg>
                    </a>
                    </div>
                </div>
            </div>

        </div>
        <% end %>
    </div>
</div>
    <% end %>
